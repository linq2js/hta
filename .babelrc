{
  "presets": [
    [
      "@babel/preset-react",
      {
        "targets": {
          "node": true
        }
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-syntax-class-properties",
    "@babel/plugin-proposal-class-properties"
  ],
  "env": {
    "test": {
      "presets": ["@babel/preset-env", "jest"],
      "plugins": [
        "@babel/plugin-transform-modules-commonjs",
        [
          "@babel/plugin-transform-runtime",
          {
            "helpers": true,
            "regenerator": true
          }
        ],
        [
          "module-resolver",
          {
            "alias": {
              "hta": "./lib"
            }
          }
        ]
      ]
    }
  }
}
